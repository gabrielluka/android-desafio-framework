<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="5dp"
    android:elevation="3dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_label_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        />

        <TextView
            android:id="@+id/tv_label_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todos_label_completed"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_label_todo"
            />
        <ImageView
            android:id="@+id/iv_icon_completed"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@id/tv_label_completed"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_label_completed"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-4dp"
            android:src="@drawable/ic_check" />
</RelativeLayout>